<% include ../partials/header %>

<div class="container container-main">
  <br/>
  <h1>Add a New Event Post</h1>
  <br/>
  <form action="/posts" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="post[title]" placeholder="title">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="post[datetime]" placeholder="date and time details">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="post[location]" placeholder="location">
    </div>
    <div class="form-group">
     <input class="form-control" type="text" name="post[description]" placeholder="description">
    </div>
    <button class="btn btn-sm btn-outline-info inline">Submit</button>
  </form>
  <br/>
  <a class="btn btn-sm btn-outline-info" href="/posts">Return to event list</a>
</div>

<% include ../partials/footer %>
