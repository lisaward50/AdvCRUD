<% include ../partials/header %>

<div class="container container-main">
  <br/>
  <h1>Edit Event Post: <%= post.title %></h1>
  <br/>
  <form action="/posts/<%= post._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="post[datetime]" value="<%= post.datetime %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="post[location]" value="<%= post.location %>">
    </div>
    <div class="form-group">
     <input class="form-control" type="text" name="post[description]" value="<%= post.description %>">
    </div>
    <button class="btn btn-sm btn-outline-info inline">Submit</button>
  </form>
  <br/>
  <a class="btn btn-sm btn-outline-info" href="/posts">Return to event list</a>
</div>

<% include ../partials/footer %>
